<Window x:Class="MHC_technic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MHC_technic"
        mc:Ignorable="d"
        Title="Авторизация" Height="264" Width="344">
    <Grid>
        <TextBox x:Name="Login" Margin="100,99,81,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="44,95,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="41,121,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" VerticalAlignment="Top" Margin="100,130,81,0"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="37,181,0,0" VerticalAlignment="Top" Height="31" Width="98" Click="enterButton" BorderBrush="{x:Null}" Background="#FF7BFF00"/>
        <Button Content="Закрыть" HorizontalAlignment="Left" Margin="208,181,0,0" VerticalAlignment="Top" Height="31" Width="96" Click="exitButton" BorderBrush="{x:Null}" Background="Red"/>
        <Image Margin="36,1,36,0" Source="/mfc.png" Stretch="Fill" Height="89" VerticalAlignment="Top"/>

    </Grid>
</Window>
